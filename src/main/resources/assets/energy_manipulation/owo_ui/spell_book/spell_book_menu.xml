<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <!--=================================================================================================-->
                <!--MAIN STACK-->
                <stack-layout>
                    <children>
                        <texture texture="energy_manipulation:textures/gui/spell_book/spell_book_menu.png" u="0"
                                 v="0" region-width="292" region-height="268" texture-width="512"
                                 texture-height="512"/>

                        <!--=========================================================================================-->
                        <!--PAGE DATA-->
                        <flow-layout direction="horizontal">
                            <children>
                                <!--=================================================================================-->
                                <!--FIRST PAGE-->
                                <flow-layout direction="vertical">
                                    <children>
                                        <!--=========================================================================-->
                                        <!--FIRST PAGE CONTENT-->
                                        <flow-layout direction="vertical">
                                            <children>
                                                <!--=================================================================-->
                                                <!--NODES SCROLL BAR-->
                                                <scroll direction="vertical">
                                                    <!--=================================================================-->
                                                    <!--NODES CONTAINER-->
                                                    <flow-layout direction="vertical" id="nodes_list">
                                                        <children/>

                                                        <!--nodes container style-->
                                                        <sizing>
                                                            <vertical method="content">0</vertical>
                                                            <horizontal method="fill">100</horizontal>
                                                        </sizing>
                        
                                                        <padding> <!--padding for scroll bar content-->
                                                            <right>4</right>
                                                        </padding>
                                                    </flow-layout>
                                                    <!--END NODES CONTAINER-->
                                                    <!--=================================================================-->

                                                    <!--nodes scroll bar style-->
                                                    <margins>
                                                        <top>7</top>
                                                        <bottom>32</bottom>
                                                        <horizontal>8</horizontal>
                                                    </margins>
                                                    
                                                    <sizing>
                                                        <vertical method="fill">100</vertical>
                                                        <horizontal method="fill">100</horizontal>
                                                    </sizing>
                                                </scroll>
                                                <!--END NODES SCROLL BAR-->
                                                <!--=================================================================-->
                                            </children>

                                            <!--first page content style-->
                                            <sizing>
                                                <vertical method="fill">100</vertical>
                                                <horizontal method="fill">100</horizontal>
                                            </sizing>

                                            <!--> 
                                            <surface>
                                                <panel dark="true"></panel>
                                            </surface>
                                            <!-->

                                        </flow-layout>
                                        <!--END FIRST PAGE CONTENT-->
                                        <!--=========================================================================-->
                                    </children>

                                    <!--first page style-->
                                    <sizing>
                                        <vertical method="fill">100</vertical>
                                        <horizontal method="fill">50</horizontal>
                                    </sizing>
                                    
                                    <padding> <!--padding so content stays in the left page's bounds-->
                                        <top>7</top>
                                        <left>8</left>
                                        <bottom>8</bottom>
                                        <right>6</right>
                                    </padding>

                                </flow-layout>
                                <!--END FIRST PAGE-->
                                <!--=================================================================================-->

                                <!--=================================================================================-->
                                <!--SECOND PAGE-->
                                <flow-layout direction="vertical">
                                    <children>
                                        <!--=========================================================================-->
                                        <!--SECOND PAGE CONTENT-->
                                        <flow-layout direction="vertical" id="second_page">
                                            <children>
                                                <template name="second_page"/>
                                            </children>

                                            <!--second page content style-->
                                            <sizing>
                                                <vertical method="fill">100</vertical>
                                                <horizontal method="fill">100</horizontal>
                                            </sizing>
                                            
                                            <!--> 
                                            <surface>
                                                <panel dark="true"></panel>
                                            </surface>
                                            <!-->
                                            
                                        </flow-layout>
                                        <!--END SECOND PAGE CONTENT-->
                                        <!--=========================================================================-->
                                    </children>

                                    <!--second page style-->
                                    <sizing>
                                        <vertical method="fill">100</vertical>
                                        <horizontal method="fill">50</horizontal>
                                    </sizing>

                                    <padding> <!--padding so content stays in the right page's bounds-->
                                        <top>7</top>
                                        <left>6</left>
                                        <bottom>8</bottom>
                                        <right>8</right>
                                    </padding>
                                    
                                </flow-layout>
                                <!--END SECOND PAGE-->
                                <!--=================================================================================-->
                            </children>

                            <!--page data style-->
                            <sizing>
                                <vertical method="fixed">180</vertical>
                                <horizontal method="fixed">292</horizontal>
                            </sizing>

                            <positioning type="relative">50,0</positioning>
                            
                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                            
                        </flow-layout>
                        <!--END PAGE DATA-->
                        <!--=========================================================================================-->
                    </children>

                    <!--main stack style-->
                    <sizing>
                        <vertical method="content">0</vertical>
                        <horizontal method="content">0</horizontal>
                    </sizing>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    
                </stack-layout>
                <!--END MAIN STACK-->
                <!--=================================================================================================-->
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            
            <surface>
                <vanilla-translucent></vanilla-translucent>
            </surface>
            
        </flow-layout>
    </components>



    <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////////-->


    
    <templates>

        <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////-->
        <!--=========================================================================================================-->
        <!--SECOND PAGE TEMPLATE-->
        <template name="second_page">
            
            <flow-layout direction="vertical">
                <children>
                    <flow-layout direction="vertical" id="node_info">
                        <children>
                            <template name="node_info"/>
                        </children>
                    </flow-layout>

                    <flow-layout direction="vertical" id="node_class_info">
                        <children>
                            <template name="node_info"/>
                        </children>
                    </flow-layout>
                </children>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                    <vertical method="fill">100</vertical>
                </sizing>
            </flow-layout>
            
        </template>
        <!--END SECOND PAGE TEMPLATE-->
        <!--=========================================================================================================-->
        <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////-->

        
        
        <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////-->
        <!--=========================================================================================================-->
        <!--NODE INFO TEMPLATE-->
        <template name="node_info">

            <flow-layout direction="vertical">
                <children>
                    <!--=============================================================================================-->
                    <!--FIRST SQUARE-->
                    <flow-layout direction="vertical">
                        <children>
                            <scroll direction="vertical">
                                <label id="template_node_info_name">
                                    <text translate="false">"node_info_name_label"</text>
                                    
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="content">0</vertical>
                                    </sizing>
                                    
                                    <horizontal-text-alignment>center</horizontal-text-alignment>
                                </label>
                                
                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                    <vertical method="fill">100</vertical>
                                </sizing>
                            </scroll>
                        </children>
                        
                        <sizing>
                            <horizontal method="fill">66</horizontal>
                            <vertical method="fill">40</vertical>
                        </sizing>

                        <horizontal-alignment>center</horizontal-alignment>
                        <vertical-alignment>center</vertical-alignment>

                        <padding>
                            <horizontal>6</horizontal>
                            <vertical>4</vertical>
                        </padding>

                        <surface>
                            <panel dark="false"></panel>
                        </surface>
                    </flow-layout>
                    <!--END FIRST SQUARE-->
                    <!--=============================================================================================-->

                    <!--=============================================================================================-->
                    <!--SECOND SQUARE-->
                    <flow-layout direction="vertical">
                        <children>
                            <scroll direction="vertical">
                                <label id="template_node_info_description">
                                    <text translate="false">"node_info_description_label"</text>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="content">0</vertical>
                                    </sizing>
                                </label>

                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                    <vertical method="fill">100</vertical>
                                </sizing>
                            </scroll>
                        </children>

                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="fill">60</vertical>
                        </sizing>

                        <horizontal-alignment>center</horizontal-alignment>
                        <vertical-alignment>center</vertical-alignment>

                        <padding>
                            <horizontal>6</horizontal>
                            <vertical>4</vertical>
                        </padding>

                        <surface>
                            <panel dark="false"></panel>
                        </surface>
                    </flow-layout>
                    <!--END SECOND SQUARE-->
                    <!--=============================================================================================-->
                </children>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                    <vertical method="fill">33</vertical>
                </sizing>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>
                
                <padding>
                    <horizontal>4</horizontal>
                    <vertical>4</vertical>
                </padding>
                
                <surface>
                    <panel dark="true"></panel>
                </surface>
            </flow-layout>

        </template>
        <!--END NODE INFO TEMPLATE-->
        <!--=========================================================================================================-->
        <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////-->
        


    </templates>
</owo-ui>